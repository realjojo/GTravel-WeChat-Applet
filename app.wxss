/**app.wxss**/
@import 'weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 15px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  height: 100%;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__title {
  text-align: left;
  font-size: 16px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.foot{
  display: flex;
  margin-top: 50rpx;
  justify-content: center;
  align-items: center;
}

.divide__line {
  background-color: #ddd;
  height: 1px;
}

.hidden__item {
  display: none;
}

.page__lists {
  display: flex;
  flex-direction: column;
}

.scrollview {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.txt__ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/*弹性盒模型*/

.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.flex1 {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  box-flex: 1;
  flex: 1;
  overflow: hidden;
  display: block;
}

.tl {
  text-align: left;
}

.tc {
  text-align: center;
}

.tr {
  text-align: right;
}

.fs15 {
  font-size: 15px;
}

.ml20 {
  margin-left: 20rpx;
}

.fc8 {
  color: #888;
}
