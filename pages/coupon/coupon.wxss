/* pages/coupon/coupon.wxss */

.page__bd {
  padding-bottom: 0;
}

.weui-navbar {
  background-color: white;
}

.weui-tab__content {
  text-align: center;
  border-top: 1px solid #ddd;
}

/* 轮播图 */

.swiper {
  width: 100%;
  margin: 0rpx;
}

.swiper image {
  display: inline;
}

/* 导航对应内容项 */

.nav_section {
  width: 100%;
}

.nav_section_items {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-radius: 10rpx;
  padding: 20rpx 20rpx;
  margin: 20rpx 20rpx 0 20rpx;
  position: relative;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #ededed;
}

.nav_section_items .section_image {
  width: 140rpx;
  height: 140rpx;
}

.nav_section_items .section_image image {
  width: 100%;
  height: 100%;
}

.nav_section_items .section_cont {
  width: 298rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.nav_section_items .section_cont .name {
  font-size: 14px;
  color: #353535;
  display: flex;
  flex: 1;
  justify-content: flex-start;
  padding: 0 0 5rpx 0;
}

.textview {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nav_section_items .section_cont .price {
  font-size: 15px;
  color: #e64340;
  display: flex;
  flex: 1;
  justify-content: flex-start;
}

.nav_section_items .section_cont .active_time {
  font-size: 12px;
  color: #888;
  display: flex;
  flex: 1;
  justify-content: flex-start;
  padding: 10rpx 0 0 0;
}

.nav_section_items .receive {
  width: 182rpx;
  display: flex;
  align-items: center;
}

.nav_section_items .divide_line {
  width: 2rpx;
  height: 140rpx;
  margin: 0 20rpx 0 0;
  border-right: 1rpx dashed #888;
}

.nav_section_items .receive button {
  width: 160rpx;
  height: 55rpx;
  background-color: #87c38e;
  color: white;
  border-radius: 30rpx;
  font-size: 11px;
  text-align: center;
}
