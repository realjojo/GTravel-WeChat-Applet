/* pages/user/order.wxss */

.swiper_navbar {
  width: 100%;
  background: white;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
}

.tab_item {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
  color: #888;
}

.swiper {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 85rpx;
  border-top: 1rpx solid #ddd;
}

.on {
  color: #f96;
  border-bottom: 5rpx solid #f96;
}

.content {
  overflow-y: scroll;
}

.order_item {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: white;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.item_title {
  display: flex;
  padding: 15rpx;
  align-items: center;
  justify-content: space-between;
}

.shop_name {
  display: flex;
  font-size: 15px;
  align-items: center;
}

.shop_name image {
  width: 33rpx;
  height: 33rpx;
}

.txt1 {
  margin: 0 25rpx;
  font-weight: bold;
}

.txt2 {
  color: #888;
}

.divide_line {
  height: 1px;
  margin-left: 15rpx;
  background-color: #ddd;
}

.item_divide {
  display: flex;
  flex-direction: column;
}

.item_content {
  width: 100%;
  display: flex;
  padding: 15rpx;
}

.item_content image {
  width: 100rpx;
  height: 100rpx;
}

.item_text {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.num_price {
  display: flex;
  width: 600rpx;
  font-size: 14px;
  justify-content: space-between;
}

.g_num {
  color: #888;
}

.g_price {
  font-size: 14px;
  margin-left: 30rpx;
}

.order_status {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  border-top: 1px solid #ddd;
}

.status {
  display: flex;
  justify-content: space-between;
  padding-bottom: 15rpx;
}

.status text {
  font-size: 14px;
}

.btns {
  display: flex;
  justify-content: flex-end;
}

.btn1 {
  font-size: 13px;
  background: white;
  text-align: center;
  border-radius: 10rpx;
  border: 1rpx solid #ddd;
}

.btn2 {
  font-size: 13px;
  color: white;
  background: #87c38e;
  text-align: center;
  border-radius: 10rpx;
}
