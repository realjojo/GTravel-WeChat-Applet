/* pages/route/route_planning.wxss */

.container {
  background-color: #f8f8f8;
  width: 100%;
  height: 100%;
}

.swiper_navbar {
  width: 100%;
  background: white;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
}

.tab_item {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 16px;
  color: #888;
}

.swiper {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 85rpx;
}

.on {
  color: #3399FF;
  border-bottom: 5rpx solid #3399FF;
}

.content {
  width: 100%;
  height: 100%;
}

.single_route {
  width: 100%;
  height: 220rpx;
  background-color: #87c38e;
  display: flex;
  flex-direction: row;
}

.single_search {
  display: flex;
  flex-direction: column;
  flex: 8;
}

.single_search input {
  display: flex;
  height: 80rpx;
  margin-left: 80rpx;
  margin-top: 20rpx;
  padding-left: 10rpx;
  font-size: 16px;
  background-color: white;
  opacity: 0.4;
  border-radius: 10rpx;
}

.exchange {
  flex: 1;
  height: 100%;
  display: flex;
}

.exchange image {
  width: 100%;
  height: 100%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  align-items: center;
  justify-content: center;
}

.search_history {
  background-color: white;
  border-top: 1px solid #ddd;
  padding: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.clear_history {
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
  text-align: center;
  border-bottom: 1px solid #ddd;
}

.clear_history text {
  width: 100%;
  height: 100%;
  font-size: 16px;
}

.multi_route {
  width: 100%;
  background-color: #87c38e;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}

.multi_search {
  width: 100%;
  height: 100rpx;
}

.multi_search input {
  display: flex;
  flex: 8;
  height: 80rpx;
  margin-left: 70rpx;
  margin-top: 20rpx;
  padding-left: 10rpx;
  font-size: 16px;
  background-color: white;
  opacity: 0.4;
  border-radius: 10rpx;
}

.add {
  flex: 1;
  height: 100%;
  display: flex;
}

.add image {
  width: 100%;
  height: 100%;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 10rpx;
  align-items: center;
  justify-content: center;
}

.bottom {
  width: 100%;
  height: 80rpx;
  display: flex;
  bottom: 200rpx;
  position: fixed;
  justify-content: center;
}

.search_btn {
  color: white;
  background-color: #87c38e;
  font-size: 16px;
  width: 280rpx;
}
