/* pages/shops/shops.wxss */

.result_item {
  display: flex;
  border-bottom: 1px solid #ddd;
}

.pic {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
}

.desc {
  display: flex;
  flex-direction: column;
  width: 580rpx;
  justify-content: space-between;
  margin: 14rpx 0;
}

.row {
  display: flex;
}

.row_sb {
  display: flex;
  justify-content: space-between;
  color: #888;
  font-size: 14px;
}

.stars {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}

.tag {
  width: 270rpx;
  display: inline-flex; 
}

.tag view {
  font-size: 12px;
  color: #f88;
  width: auto;
  height: 40rpx;
  border-radius: 20rpx;
  border: 1px solid #f88;
  display: flex;
  align-items: center;
  padding: 0 8rpx;
  margin-right: 10rpx;
  background: #fff0f5;
  white-space: nowrap;
}
